    <channel-group-type id="nationalGroup">
        <label>General Warning Information</label>
        <description>A general summary of current nationwide warnings.</description>
        <channels>
            <channel id="summary" typeId="warning_text"/>
        </channels>
    </channel-group-type>

    <channel-group-type id="warningGroup">
        <label>Warning</label>
        <description>Information about a single warning.</description>
        <channels>
            <channel id="level" typeId="warning_level"/>
            <channel id="start_time" typeId="warning_start"/>
            <channel id="end_time" typeId="warning_end"/>
            <channel id="title" typeId="warning_title"/>
            <channel id="description" typeId="warning_text"/>
        </channels>
    </channel-group-type>

    <channel-type id="warning_title">
        <item-type>String</item-type>
        <label>Warning Title</label>
        <description>Title for the warning.</description>
        <category>Text</category>
    </channel-type>

    <channel-type id="warning_text">
        <item-type>String</item-type>
        <label>Warning Description</label>
        <description>Description of the warning.</description>
        <category>Text</category>
    </channel-type>

    <channel-type id="warning_level">
        <item-type>Number</item-type>
        <label>Warning Level</label>
        <description>Level of the warning. (0 = green, 1 = yellow, 2 = orange, 3 = red)</description>
        <category>Alarm</category>
    </channel-type>

    <channel-type id="warning_start">
        <item-type>DateTime</item-type>
        <label>Warning Start</label>
        <description>Start time of the warning.</description>
        <category>Time</category>
        <state readOnly="true" pattern="%1$tF %1$tR"/>
    </channel-type>

    <channel-type id="warning_end">
        <item-type>DateTime</item-type>
        <label>Warning End</label>
        <description>End time of the warning.</description>
        <category>Time</category>
        <state readOnly="true" pattern="%1$tF %1$tR"/>
    </channel-type>

</thing:thing-descriptions>
